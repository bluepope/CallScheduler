<Window x:Class="CallScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallScheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnNewAlarm" Grid.Column="0" Command="">새 알람</Button>
            <Button x:Name="btnAlarmEdit" Grid.Column="1" Command="">알람 수정</Button>
            <Button x:Name="btnAlarmDelete" Grid.Column="2" Command="">알람 삭제</Button>
            <Button x:Name="btn" Grid.Column="3" Command="">알람 저장</Button>
        </Grid>

        <Grid Grid.Row="1" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label x:Name="lblTargetName" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">고객명</Label>
            <Label x:Name="lblTargetPhoneNumber" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">고객 전화번호</Label>
            <Label x:Name="lblTimerSet" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">알람 시간</Label>
            <Label x:Name="lblMemo" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center">메모</Label>
            <TextBox x:Name="tbTargetName" Grid.Column="1" Grid.Row="0" Text="{Binding Name}"/>
            <TextBox x:Name="tbTargetPhoneNumber" Grid.Column="1" Grid.Row="1" Text="{Binding PhoneNumber}"/>
            <TextBox x:Name="tbTimerSet" Grid.Column="1" Grid.Row="2" Text="{Binding AlarmTime}"/>
            <TextBox x:Name="tbMemo" Grid.Column="1" Grid.Row="3" Text="{Binding Memo}"/>
        </Grid>

        <Grid Grid.Row="2">
            <GroupBox Header="&lt;고객명단&gt;" FontSize="20">
                <ListView x:Name="lvGuestList">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="colName" Width="60" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="colPhoneNumber" Width="60" DisplayMemberBinding="{Binding PhoneNumber}"/>
                            <GridViewColumn Header="colAlarmTime" Width="60" DisplayMemberBinding="{Binding AlarmTime}"/>
                            <GridViewColumn Header="colMemo" Width="60" DisplayMemberBinding="{Binding Memo}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
