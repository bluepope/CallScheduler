<UserControl x:Class="UC.DateTimePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UC"
             mc:Ignorable="d" d:DesignWidth="200" Height="220" Loaded="UserControl_Loaded"
             >
    <StackPanel>
        <Viewbox>
            <Calendar x:Name="ClnrDatePicker" SelectedDate="{Binding SelectedDate}"/>
        </Viewbox>
        <local:DateSpinControl x:Name="SpDateController" Width="200"/>
    </StackPanel>
</UserControl>
