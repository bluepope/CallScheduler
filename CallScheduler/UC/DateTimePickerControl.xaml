<UserControl x:Class="UC.DateTimePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UC"
             xmlns:cnvt="clr-namespace:CallScheduler.Global"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Name="DTPUC"
             d:DesignWidth="200" 
             Height="220">
    <UserControl.Resources>
    </UserControl.Resources>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <StackPanel>
        <Viewbox>
            <Calendar x:Name="ClnrDatePicker" SelectedDate="{Binding SelectedDate}"/>
        </Viewbox>
        <local:DateSpinControl x:Name="SpDateController" Width="200" 
                               Hour="{Binding Hour}" 
                               Minute="{Binding Minute}"/>
    </StackPanel>
</UserControl>
