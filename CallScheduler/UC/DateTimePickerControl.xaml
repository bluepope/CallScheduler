<UserControl x:Class="UC.DateTimePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UC="clr-namespace:UC"
             xmlns:cnvt="clr-namespace:CallScheduler.Global"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Name="DTPUC"
             d:DesignWidth="200" 
             Height="220">
    <UserControl.Resources>
    </UserControl.Resources>
    
    <StackPanel>
        <Viewbox>
            <Calendar x:Name="ClnrDatePicker" SelectedDate="{Binding SelectedDateTime}"/>
        </Viewbox>
        <UC:DateSpinControl x:Name="SpDateController" Width="200" 
                            Hour="{Binding Path=DataContext.Hour, ElementName=DTPUC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Minute="{Binding Path=DataContext.Minute, ElementName=DTPUC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            FontSize="{Binding Path=DataContext.FontSize, ElementName=DTPUC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            />
    </StackPanel>
</UserControl>
